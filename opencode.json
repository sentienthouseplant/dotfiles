{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "bunx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": true
    },
    "exa": {
      "type": "local",
      "command": [
        "bunx",
        "-y",
        "exa-mcp-server"
      ],
      "environment": {
        "EXA_API_KEY": "{env:EXA_API_KEY}"
      },
      "enabled": true
    }
  }
}
